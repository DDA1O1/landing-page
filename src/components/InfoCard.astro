---
// src/components/InfoCard.astro
interface Props {
	title: string;
	class?: string; // Allow passing additional classes
}

const { title } = Astro.props;
const additionalClasses = Astro.props.class;
---

<div class:list={["info-card", additionalClasses]}>
    <h3>{title}</h3>
    <div class="card-content">
        <!-- Default slot for main paragraph content -->
        <slot />
    </div>
     <div class="card-footer">
         <!-- Named slot for links, lists, or other footer content -->
        <slot name="footer" />
    </div>
</div>

<style>
/* --- Card Styling --- */
.info-card {
    background-color: var(--card-bg-light, rgba(255, 255, 255, 0.75)); /* Slightly less transparent */
    border-radius: 12px;
    padding: 24px;
    box-shadow: 0 5px 15px var(--shadow-color-light, rgba(0, 0, 0, 0.1)); /* Adjusted shadow */
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.25);
    transition: transform 0.3s ease-out, box-shadow 0.3s ease-out;
    width: 100%;
    max-width: 330px; /* Slightly wider max-width */
    text-align: left;
    color: var(--text-light-secondary);
    display: flex; /* Use flexbox for vertical layout */
    flex-direction: column;
}

.info-card:hover {
    transform: translateY(-6px) scale(1.025);
    box-shadow: 0 10px 25px var(--shadow-color-light, rgba(0, 0, 0, 0.18));
}

.info-card h3 {
    font-size: 1.2rem; /* Slightly adjusted */
    font-weight: 600;
    color: var(--text-light);
    margin-top: 0;
    margin-bottom: 16px; /* Increased space below title */
    border-bottom: 1px solid rgba(0, 0, 0, 0.05); /* Subtle separator */
    padding-bottom: 10px;
}

.card-content {
    font-size: 0.95rem;
    line-height: 1.65; /* Slightly more line height */
    margin-bottom: 16px;
    flex-grow: 1; /* Allow content to take available space */
}
.card-content p:last-child {
    margin-bottom: 0;
}

.card-footer {
    margin-top: auto; /* Push footer to bottom if card height varies */
    padding-top: 16px;
    border-top: 1px solid rgba(0, 0, 0, 0.05); /* Subtle separator */
}

/* Styling for specific footer content (add as needed) */

/* Style for a simple list of links in the footer */
.card-link-list {
    list-style: none;
    padding: 0;
    margin: 0;
}
.card-link-list li {
    margin-bottom: 8px;
}
.card-link-list li:last-child {
    margin-bottom: 0;
}
.card-link-list a {
    display: inline-block;
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--link-light);
    text-decoration: none;
    transition: color 0.2s ease, transform 0.2s ease;
}
.card-link-list a:hover {
    color: var(--link-light-hover);
    transform: translateX(3px); /* Slight move on hover */
}
.card-link-list a::after {
    content: ' \2192'; /* Right arrow */
    opacity: 0.6;
    margin-left: 4px;
}


/* Style for divided link blocks in the footer */
.card-links-divided {
    display: flex;
    flex-direction: column;
    gap: 16px; /* Space between blocks */
}
.link-block strong {
    display: block;
    margin-bottom: 4px;
    font-size: 0.95rem;
    font-weight: 600;
}
.link-block strong a {
    color: var(--text-light); /* Make main link darker */
    text-decoration: none;
    transition: color 0.2s ease;
}
.link-block strong a:hover {
    color: var(--link-light); /* Use main link color */
}
.link-block small {
    font-size: 0.85rem;
    color: var(--text-light-secondary);
    line-height: 1.4;
    display: block; /* Ensure it takes its own line */
}

/* --- Dark Mode for Card --- */
@media (prefers-color-scheme: dark) {
    .info-card {
        background-color: var(--card-bg-dark, rgba(45, 55, 72, 0.75));
        border-color: rgba(255, 255, 255, 0.15);
        box-shadow: 0 5px 15px var(--shadow-color-dark, rgba(0, 0, 0, 0.3));
        color: var(--text-dark-secondary);
    }
    .info-card:hover {
        box-shadow: 0 10px 25px var(--shadow-color-dark, rgba(0, 0, 0, 0.4));
    }
    .info-card h3 {
        color: var(--text-dark);
        border-bottom-color: rgba(255, 255, 255, 0.1);
    }
    .card-footer {
        border-top-color: rgba(255, 255, 255, 0.1);
    }

    /* Footer Lists Dark */
    .card-link-list a { color: var(--link-dark); }
    .card-link-list a:hover { color: var(--link-dark-hover); }

    /* Footer Divided Blocks Dark */
    .link-block strong a { color: var(--text-dark); }
    .link-block strong a:hover { color: var(--link-dark); } /* Keep main link color */
    .link-block small { color: var(--text-dark-secondary); }
}
</style>